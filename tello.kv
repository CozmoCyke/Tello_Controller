#:kivy 1.0.9

<TelloController>:
    Button:
        text: str("Rotate")
        center_x: root.width/4
        top: root.top - (root.height/8)
        on_press: root.rotatecw()

    Button:
        text: str("Rotate")
        center_x: root.width * 0.75
        top: root.top - (root.height/9)
        on_press: root.rotateccw()

    Button:
        id: take_off
        font_size: 25
        on_press: root.takeoff()
        center_x: root.width / 9
        background_normal: ''
        background_color: 0, 1, 0, 1
        top: root.top
        text: str("Take Off")

    Button:
        id: land
        font_size: 25
        on_press: root.land()
        background_normal: ''
        background_color: 1, 0, 0, 1.
        center_x: root.width / 9
        top: root.top - (root.height/4)
        text: str("Land")

    Button:
        text: str("Forwards")
        on_press: root.forward()
        top: root.top - (root.height/9)
        center_x: root.width / 2

    Button:
        font_size: 25
        on_press: root.left()
        background_normal: ''
        background_color: 0, 0, 1, 1.
        center_x: root.width / 4
        top: root.top - (root.height/1.75)
        text: str("Left")

    Button:
        font_size: 25
        on_press: root.right()
        background_normal: ''
        background_color: 0, 0, 1, 1.
        top: root.top - (root.height/1.75)
        center_x: root.width * 0.75
        text: str("Right")

    Slider: 
        font_size: 25
        min_value: 0
        max_value: 100
        height: 500
        on_touch_up: root.moveup()
        on_touch_down: root.movedown()
        center_x: root.width
        orientation: 'vertical'

    ProgressBar:
        value: root.speed
        max_value: 1
        center_x: root.width/2